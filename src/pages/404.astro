---
import Layout from "../layouts/Layout.astro";
import Button from "../components/ui/Button.astro";
---

<Layout>
  <section id="404">
    <div class="container">
      <div class="grid min-h-svh place-items-center">
        <div class="text-center">
          <p class="text-base font-semibold text-primary">404</p>
          <h1 class="mt-4 text-balance text-5xl font-semibold tracking-tight sm:text-7xl">Page not found</h1>
          <p class="mt-6 text-pretty text-lg font-medium text-muted-foreground sm:text-xl/8">Sorry, we couldn't find the page you were looking for.</p>
          <div class="mt-10 flex flex-col sm:flex-row items-stretch sm:items-center justify-center gap-x-6 gap-y-4">
            <Button href="/">To homepage</Button>
            <Button href="/#contact" variant="outline">
              Contact us
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
