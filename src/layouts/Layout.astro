---
import '../styles/global.css'
import {Linkedin, Github} from 'lucide-astro'

const navigation = [
  {name: 'About me', url: '#about-me'},
  {name: 'Showcase', url: '#showcase'},
  {name: 'Contact', url: '#contact'},
]
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="description" content="Astro description"/>
  <meta name="viewport" content="width=device-width"/>
  <link rel="icon" type="image/svg+xml" href="/favicon.png"/>
  <meta name="og:title" content="Portfolio | Patrick Huizinga"/>
  <meta name="description" content="A front-end developer that loves doing creative things with code."/>
  <meta name="og:description" content="A front-end developer that loves doing creative things with code."/>
  <meta name="og:image" content="https://patrickhuizinga.nl/intro.jpg"/>
  <meta name="generator" content={Astro.generator}/>
  <title>Portfolio | Patrick Huizinga</title>
</head>
<body>
<div class="animate-zoom-in fixed bottom-6 sm:bottom-12 left-1/2 -translate-x-1/2 mix-blend-exclusion backdrop-blur-md bg-neutral-200 rounded-lg shadow-[0_0_16px_#000] z-50">
  <nav class="p-0.5 bg-transparent">
    <ul class="flex gap-0.5 text-neutral-950 text-sm sm:text-base font-semibold">
      {navigation.map(item => (
        <li class="rounded-md has-[a:focus-visible]:ring-[3px] has-[a:focus-visible]:ring-primary-500">
          <a href={item.url}
             class="inline-block px-5 sm:px-8 py-3 uppercase rounded-md hover:bg-neutral-950 hover:text-white duration-300 whitespace-nowrap focus-visible:outline-none">{item.name}</a>
        </li>
      ))}
    </ul>
  </nav>
</div>

<slot/>

<footer class="w-full bg-black pt-24 pb-40">
  <div class="grid grid-cols-8 max-w-[128rem] mx-auto">
    <div class="col-span-6 col-start-2">
      <div class="flex justify-center items-center gap-x-6">
        <a href="https://www.linkedin.com/in/patrick-huizinga-3957b914b/" target="_blank" class="p-3 rounded-full hover:bg-zinc-800 transform-color duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-300">
          <Linkedin class="size-7 text-white" />
          <span class="sr-only">LinkedIn</span>
        </a>
        <a href="https://github.com/PatrickHuizinga88" target="_blank" class="p-3 rounded-full hover:bg-zinc-800 transform-color duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-300">
          <Github class="size-7 text-white" />
          <span class="sr-only">GitHub</span>
        </a>
      </div>
    </div>
  </div>
</footer>

<div class="fixed inset-0 flex justify-between h-full w-full max-w-[128rem] mx-auto -z-10">
  <div class="invisible"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="invisible"></div>
</div>

<script src="../utils/aos.js"></script>
</body>
</html>

<style is:global>

</style>
