---
import '../styles/global.css'
import {Linkedin, Github} from 'lucide-astro'

interface Props {
  title?: string;
  description?: string;
  heroImage?: string;
}

const navigation = [
  {name: 'About me', url: '#about-me'},
  {name: 'Showcase', url: '#showcase'},
  {name: 'Contact', url: '#contact'},
];

const {
  title = "Patrick Huizinga - Creative Developer",
  description = "I’m a creative web developer specializing in modern websites and web applications that help businesses grow and thrive online. Let’s build something great!",
  heroImage = "https://patrickhuizinga.nl/logo.svg"
} = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="description" content="Astro description"/>
  <meta name="viewport" content="width=device-width"/>
  <link rel="icon" type="image/png" href="/favicon.png"/>
  <meta property="og:title" content={title}/>
  <meta property="og:type" content="website"/>
  <meta property="og:url" content="https://patrickhuizinga.nl"/>
  <meta property="og:site_name" content={title}/>
  <meta property="description" content={description}/>
  <meta property="og:description" content={description}/>
  <meta property="og:image" content={heroImage}/>
  <meta name="generator" content={Astro.generator}/>
  <script src="https://cloud.umami.is/script.js" data-website-id="36625c1c-54fb-4d72-aec9-31d94def45d7"></script>
  <title>{title}</title>
</head>
<body>

<div class="animate-zoom-in origin-center fixed bottom-6 sm:bottom-12 left-1/2 -translate-x-1/2 mix-blend-exclusion bg-neutral-200 rounded-lg shadow-[0_0_16px_#000] backdrop-blur z-50">
  <nav class="relative p-0.5 bg-transparent">
    <ul class="flex gap-0.5 text-neutral-950 text-sm sm:text-base font-semibold">
      {navigation.map(item => (
              <li class="rounded-md has-[a:focus-visible]:ring-[3px] has-[a:focus-visible]:ring-primary-500">
                <a href={item.url}
                   class="inline-block px-5 sm:px-8 py-3 uppercase rounded-md hover:bg-neutral-950 hover:text-white duration-300 whitespace-nowrap focus-visible:outline-none">{item.name}</a>
              </li>
      ))}
    </ul>
  </nav>
</div>

<slot/>

<footer class="w-full bg-black pt-24 pb-40">
  <div class="grid grid-cols-8 max-w-[128rem] mx-auto">
    <div class="col-span-6 col-start-2">
      <div class="flex justify-center items-center gap-x-6">
        <a href="https://www.linkedin.com/in/patrick-huizinga-3957b914b/" target="_blank" class="p-3 rounded-full hover:bg-zinc-800 transform-color duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-300">
          <Linkedin class="size-7 text-white" />
          <span class="sr-only">LinkedIn</span>
        </a>
        <a href="https://github.com/PatrickHuizinga88" target="_blank" class="p-3 rounded-full hover:bg-zinc-800 transform-color duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-300">
          <Github class="size-7 text-white" />
          <span class="sr-only">GitHub</span>
        </a>
      </div>
    </div>
  </div>
</footer>

<div class="fixed inset-0 flex justify-between h-full w-full max-w-[128rem] mx-auto -z-10" aria-hidden="true">
  <div class="invisible"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="border border-white/[0.1] border-dashed"></div>
  <div class="invisible"></div>
</div>

<script src="../utils/aos.js"></script>
</body>
</html>

<style is:global>

</style>
